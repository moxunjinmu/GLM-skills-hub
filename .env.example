# ==================== 数据库配置 ====================
# PostgreSQL 数据库连接 URL
DATABASE_URL="postgresql://user:password@localhost:5432/glm_skills_hub?schema=public"

# ==================== GitHub 配置 ====================
# GitHub Personal Access Token (用于访问 GitHub API)
# 获取方式: https://github.com/settings/tokens
GITHUB_TOKEN=""
GITHUB_API_URL="https://api.github.com"
# GitHub 仓库组织/用户名 (用于项目链接)
NEXT_PUBLIC_GITHUB_ORG="your-org"

# ==================== Claude API 配置 ====================
# Anthropic API Key (用于在线试用功能)
# 获取方式: https://console.anthropic.com/
ANTHROPIC_API_KEY=""

# ==================== 智谱 AI 配置 ====================
# 智谱 AI API Key (用于 AI 语义搜索和嵌入向量生成)
# 获取方式: https://open.bigmodel.cn/usercenter/apikeys
# 文档: https://docs.bigmodel.cn/cn/api/introduction
# 请求地址：https://open.bigmodel.cn/api/anthropic
# 示例 Key（请替换为您自己的 Key）
ZHIPU_API_KEY=""

# ==================== 认证配置 ====================
# GitHub OAuth App 配置
# 创建 OAuth App: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET=""

# ==================== 搜索服务配置 ====================
# 搜索模式 (keyword | semantic | hybrid)
# keyword: 关键词搜索 (SQL LIKE)
# semantic: AI 语义搜索 (需要配置 ZHIPU_API_KEY)
# hybrid: 混合搜索 (结合关键词和语义，推荐)
SEARCH_MODE="hybrid"

# 如果使用 Algolia 搜索
ALGOLIA_APP_ID=""
ALGOLIA_API_KEY=""
ALGOLIA_INDEX_NAME="skills"

# 如果使用 Meilisearch 搜索
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_API_KEY=""

# ==================== Redis 配置 ====================
# Redis 连接 URL (用于缓存)
REDIS_URL="redis://localhost:6379"

# ==================== 翻译服务配置 ====================
# 可以使用 OpenAI、DeepL 或其他翻译服务
OPENAI_API_KEY=""
DEEPL_API_KEY=""

# ==================== 邮件服务配置 ====================
# 用于发送通知邮件
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# ==================== 站点配置 ====================
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="GLM Skills Hub"
NEXT_PUBLIC_SITE_DESCRIPTION="AI Agent Skills 中文聚合平台"
